{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	: Accueil
{% endblock %}


{% block body %}
	<div class="page">
		<header class="masthead overlay">
			<div class="h-100">
				<div
					class="h-100 w-100 overlay center ">
					<!-- Mashead text and app badges-->
					<h1 class="display-2 lh-1 text-white text-center ">Site officiel du groupe de demi-fond Abbevillois</h1>
					<p class="lead fw-normal text-white text-center ">Launch your mobile app landing page faster with this free, open source theme from Start Bootstrap!</p>

				</div>
			</div>
		</header>

		<section>

			<div class="container">
				<div class="card-group vgr-cards flex-column">

					{% for article in articles %}
						<!-- Card -->

						<div class="card mb-4">
							{% if article.images[0].name is defined %}
								<div class="card-img-body">
									<img class="card-img" src="{{ asset('/uploads/images/' ~ article.images[0].name) | imagine_filter('thumb_home') }}" alt="Card image cap">
								</div>
							{% endif %}
							<div class="card-body px-5 py-5">
								<h4 class="card-title">{{article.title}}</h4>
								<p class="card-text">{{  article.formatedcontent | u.truncate(250, '...') | raw}}</p>
								<div class="d-flex justify-content-between align-items-center">
									<a href="#" class="btn btn-outline-secondary">Lire l'article</a>
									<p class="text-end text-muted mt-3">{{article.FormatedDate}}</p>
								</div>
							</div>
						</div>

						<!-- end of card -->
					{% endfor %}
				</div>
			</div>
			<!-- end of container -->
		</section>

	</div>

{% endblock %}
