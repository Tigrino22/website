{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} : Articles{% endblock %}

{% block body %}
<div>
    <section>
        <div id="services" class="cards-1">
                <div class="container">
                    <div class="row">
                        
                            {% for article in articles %}
                                
                            
                                <!-- Card -->
                                <div class="col-lg-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">{{article.title}}</h5>
                                            <p class="card-text">{{  article.formatedcontent | u.truncate(200, '...') | raw}}</p>
                                            <div class="d-flex justify-content-center">
                                                <a href="#" class="btn btn-dark text-center my-2">Lire l'article</a>
                                            </div>
                                            <p class="text-end mt-3">{{article.FormatedDate}}</p>

                                        </div>
                                    </div>
                                </div>
                                <!-- end of card -->
                            {% endfor %}
                    </div> <!-- end of row -->
                </div> <!-- end of container -->
            </div>

    </section>
</div>
{% endblock %}
